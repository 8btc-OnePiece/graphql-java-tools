directive @connection on FIELD_DEFINITION

type Query {
    users(first: Int, after: String): UserConnection @connection
}

type UserConnection {
    edges: [UserEdge!]!
    pageInfo: PageInfo!
}

type UserEdge {
    cursor: String!
    node: User!
}

type User {
    id: ID!
    name: String
}

type PageInfo {

}
